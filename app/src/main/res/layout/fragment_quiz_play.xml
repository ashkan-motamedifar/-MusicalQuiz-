<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- ðŸ”¹ Instruction text -->
    <TextView
        android:id="@+id/tvQuizInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽµ Guess the song title from the album cover"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvQuizNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q1 / 10"
        app:layout_constraintTop_toBottomOf="@id/tvQuizInstruction"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvQuizScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        app:layout_constraintTop_toBottomOf="@id/tvQuizInstruction"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/ivQuizCover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Album cover"
        app:layout_constraintTop_toBottomOf="@id/tvQuizScore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@id/btnChoice1"/>

    <Button
        android:id="@+id/btnChoice1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choice 1"
        app:layout_constraintTop_toBottomOf="@id/ivQuizCover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnChoice2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choice 2"
        app:layout_constraintTop_toBottomOf="@id/btnChoice1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnChoice3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choice 3"
        app:layout_constraintTop_toBottomOf="@id/btnChoice2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnChoice4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choice 4"
        app:layout_constraintTop_toBottomOf="@id/btnChoice3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
